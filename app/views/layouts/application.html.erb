<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-応用課題6</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <% if user_signed_in? %>
      <%= form_with url: search_path, class: "search_class", method: :get, local: :true do |f| %>
        <%= f.select :range, options_for_select([['User'], ['Book']]) %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","prefix_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
        <%= f.text_field :word %>
        <%= f.submit "検索" %>
      <% end %>
    <% end %>
      <main>
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
