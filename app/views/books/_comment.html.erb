<table class="comment_area">
  <%= render 'book_comments/index', book: @book %>
</table>
<div id="comment-error">
  <%= render 'layouts/errors', obj: @book_comment %>
</div>
<%= form_with model:[@book,@book_comment] do |f| %>
  <%= f.text_area :comment, size:"90x5" %><br>
  <%= f.submit '送信'%>
<% end %>
